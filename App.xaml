<Application x:Class="DuckWalk.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DuckWalk"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="wbBackground" Color="#FF1F1F1F"/>
        <SolidColorBrush x:Key="wbSecondaryBack" Color="#F7F6F2"/>
        <SolidColorBrush x:Key="wbGrey" Color="#C8C6C6"/>
        <SolidColorBrush x:Key="wbBlue" Color="#4B6587"/>
        <SolidColorBrush x:Key="wbText" Color="#474747"/>

        <!--Custom Elements-->
        <Style x:Key="wbMenu" TargetType="MenuItem">
            <Setter Property="Height" Value="25" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="Foreground" Value="{StaticResource wbGrey}" />
        </Style>
        
        <Style x:Key="wbSubMenu" TargetType="MenuItem">
            <Setter Property="Height" Value="25" />
            <Setter Property="Padding" Value="10,0" />
            <Setter Property="Foreground" Value="{StaticResource wbText}" />
        </Style>

    </Application.Resources>
</Application>
